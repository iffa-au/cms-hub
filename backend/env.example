# -------- Backend Environment Example --------
NODE_ENV=development
PORT=8000

# MongoDB connection
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# CORS
# Primary frontend origin
CLIENT_URL=http://localhost:3000
# Additional allowed origins (comma-separated), e.g. https://iffa.com.au,https://admin.iffa.com.au
ALLOWED_ORIGINS=

# JWT
JWT_ACCESS_SECRET=replace-with-strong-random-string
JWT_REFRESH_SECRET=replace-with-strong-random-string
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=14d

# Optional: Arcjet key for email validation
ARCJET_KEY=
